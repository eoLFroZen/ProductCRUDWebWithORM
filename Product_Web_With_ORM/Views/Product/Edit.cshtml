@model Product

<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" class="form-control" name="price" placeholder="Enter price" value="@Model.Price">
    </div>
    <div class="form-group">
        <label>Stock</label>
        <input type="number" class="form-control" name="stock" placeholder="Enter stock" value="@Model.Stock">
    </div>
    <button type="submit" class="btn btn-warning">Edit</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Cancel</button>
    </a>
</form>